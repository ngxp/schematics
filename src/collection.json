{
    "$schema": "../node_modules/@angular-devkit/schematics/collection-schema.json",
    "extends": [
        "@schematics/angular"
    ],
    "schematics": {
        "ng-add": {
            "factory": "./ng-add",
            "aliases": [
                "install"
            ],
            "description": "Add ngxp Schematics to the workspace.",
            "schema": "./ng-add/schema.json"
        },
        "component": {
            "factory": "./component",
            "aliases": [
                "c"
            ],
            "description": "Create an Angular component.",
            "schema": "./component/schema.json"
        },
        "library": {
            "factory": "./library",
            "aliases": [
                "lib"
            ],
            "description": "Create an Angular library.",
            "schema": "./library/schema.json"
        },
        "ngrx-setup": {
            "factory": "./ngrx-setup",
            "description": "Add an ngrx config to a project.",
            "schema": "./ngrx-setup/schema.json"
        },
        "ngrx": {
            "factory": "./ngrx",
            "description": "Add an ngrx feature state to a module.",
            "schema": "./ngrx/schema.json"
        }
    }
}